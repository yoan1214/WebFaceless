---
import '../styles/global.css';
import ContactModal from '../components/ContactModal.astro'; // ajusta la ruta si cambia
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title ?? 'Proyecto Astro'}</title>

    <!-- Slot opcional para que cada página pueda añadir meta/estilos extra -->
    <slot name="head" />
  </head>

  <!-- fondo negro global, texto blanco -->
  <body class="font-sans bg-black text-white">
    <!-- contenido principal -->
    <slot />

    <!-- modal de contacto (solo 1 instancia) -->
    <ContactModal />
  </body>
</html>
