---
// ShortsGrid.astro
const ids = [
  'K7VfShODQh0','subW1WWJ7rQ','ikhbMa4tRgA',
];
---

<section id="shorts" class="py-8 bg-black">
  <div
    class="
      mx-auto px-4
      max-w-screen-md        /*  < 1024 px */
      lg:max-w-screen-xl     /* 1024–1279 px */
      xl:max-w-[1600px]      /* 1280–1535 px */
      2xl:max-w-[1920px]     /* ≥ 1536 px   */

      grid
      gap-4                  /* mobile gap */
      sm:gap-6               /* ≥ 640 px    */
      lg:gap-8               /* ≥ 1024 px   */
      xl:gap-12              /* ≥ 1280 px   */
      2xl:gap-16             /* ≥ 1536 px   */

      [grid-template-columns:repeat(auto-fit,minmax(160px,1fr))]
      sm:[grid-template-columns:repeat(auto-fit,minmax(240px,1fr))]
      lg:[grid-template-columns:repeat(3,minmax(0,1fr))]
    "
  >
    {ids.map(id => (
      <div class="relative overflow-hidden rounded-none shadow-lg">
        <div class="aspect-[9/16] bg-black relative overflow-hidden">
          <iframe
            src={`https://www.youtube-nocookie.com/embed/${id}?playsinline=1&modestbranding=1&rel=0&controls=1`}
            loading="lazy"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            class="
              absolute inset-0
              h-full w-auto min-w-full
              left-1/2 -translate-x-1/2
              object-cover
            "
          ></iframe>
        </div>
      </div>
    ))}
  </div>
</section>
