---
import {
  FaInstagram,
  FaTiktok,
  FaYoutube,
  FaSoundcloud,
  FaWhatsapp,
  FaDropbox,
} from 'react-icons/fa6';
import { FiMail } from 'react-icons/fi';

const social = [
  { Comp: FaInstagram,  label: 'Instagram',  url: 'https://www.instagram.com/chechuisfaceless/' },
  { Comp: FaTiktok,     label: 'TikTok',     url: 'https://www.tiktok.com/@chechuisfaceless' },
  { Comp: FaYoutube,    label: 'YouTube',    url: 'https://www.youtube.com/@chechuisfaceless' },
  { Comp: FaSoundcloud, label: 'SoundCloud', url: 'https://soundcloud.com/chechuisfaceless' },
  { Comp: FiMail,       label: 'E-mail',     url: 'mailto:djfaceless.music@gmail.com' },
  { Comp: FaWhatsapp,   label: 'WhatsApp',   url: 'https://wa.me/34609875373' },
  { Comp: FaDropbox,    label: 'Dropbox',    url: 'https://www.dropbox.com/scl/fo/qsqnfajth718tmobf0sq3/h?dl=0' },
];
---

<footer class="bg-black py-12 text-white">
  <h2 class="text-center mb-10 text-2xl tracking-widest font-semibold">
    FOLLOW&nbsp;ME
  </h2>

  <!-- iconos -->
  <div class="mx-auto flex flex-wrap justify-center gap-6 max-w-5xl">
    {social.map(({ Comp, url, label }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
        class="relative flex items-center justify-center
               w-16 h-16 sm:w-20 sm:h-20
               border border-white/40
               text-white transition-colors
               hover:bg-white hover:text-black"
      >
        <Comp size={26} />

        <!-- tooltip desktop -->
        <span
          class="pointer-events-none absolute -bottom-7 left-1/2 -translate-x-1/2
                 whitespace-nowrap text-xs opacity-0 translate-y-1
                 transition-all duration-150
                 hover:opacity-100 hover:translate-y-0
                 hidden sm:block"
        >
          {label}
        </span>
      </a>
    ))}
  </div>

  <p class="mt-12 text-center text-xs text-gray-500">
    Â© Faceless 2025. Todos los derechos reservados.
  </p>
</footer>
