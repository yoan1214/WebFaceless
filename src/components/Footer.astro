---
import {
  FaInstagram,
  FaTiktok,
  FaYoutube,
  FaSoundcloud,
  FaWhatsapp,
  FaDropbox,
} from 'react-icons/fa6';
import { FiMail } from 'react-icons/fi';

const social = [
  { Comp: FaInstagram,  label: 'Instagram',  url: 'https://www.instagram.com/chechuisfaceless/' },
  { Comp: FaTiktok,     label: 'TikTok',     url: 'https://www.tiktok.com/@chechuisfaceless' },
  { Comp: FaYoutube,    label: 'YouTube',    url: 'https://www.youtube.com/@chechuisfaceless' },
  { Comp: FaSoundcloud, label: 'SoundCloud', url: 'https://soundcloud.com/chechuisfaceless' },
  { Comp: FiMail,       label: 'E-mail',     url: 'mailto:djfaceless.music@gmail.com' },
  { Comp: FaWhatsapp,   label: 'WhatsApp',   url: 'https://wa.me/34609875373' },
  { Comp: FaDropbox,    label: 'Dropbox',    url: 'https://www.dropbox.com/scl/fo/qsqnfajth718tmobf0sq3/h?dl=0' },
];
---

<footer class="bg-black py-8 text-white">
  <!-- HEADLINE escalable -->
  <h2 class="mb-10 text-center font-semibold tracking-widest
             text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl">
    SOCIAL&nbsp;MEDIA
  </h2>

  <!-- ICONOS -->
  <div class="mx-auto flex flex-wrap justify-center gap-5 max-w-5xl">
    {social.map(({ Comp, url, label }) => (
      <a
        key={url}
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
        class="group flex flex-col items-center text-white focus-visible:outline-none"
      >
        <div
          class="flex items-center justify-center
                 w-10 h-10 sm:w-14 sm:h-14 md:w-16 md:h-16 lg:w-20 lg:h-20 xl:w-24 xl:h-24
                 border border-white]/40
                 bg-transparent transition-colors active:scale-95
                 group-hover:bg-white group-hover:text-black"
        >
          <Comp
            className="text-[18px] sm:text-[26px] md:text-[32px] lg:text-[38px] xl:text-[44px] transition-colors"
          />
        </div>

        <span
          class="mt-1 hidden sm:block
                 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100
                 transition-opacity duration-200
                 text-xs md:text-sm lg:text-base xl:text-lg
                 whitespace-nowrap"
        >
          {label}
        </span>
      </a>
    ))}
  </div>

  <p class="mt-12 text-center text-xs text-gray-500">
    Â© Faceless 2025. Todos los derechos reservados.
  </p>
</footer>
